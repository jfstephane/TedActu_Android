<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portaitbg">

    <include

        layout="@layout/toolbarfrag"
        android:id="@+id/inclpost"

        />




    <TextView
        android:layout_below="@id/inclpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000000"/>


    <ImageView
        android:layout_below="@id/title"
        android:id="@+id/imageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/imageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content" />





    <Button
        android:id="@+id/share"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Partager"
        android:layout_below="@id/content"
        android:background="@drawable/shapevideo"/>

    <Button
        android:layout_below="@id/content"
        android:id="@+id/download"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Telecharger"
        android:layout_toRightOf="@id/share"
        android:background="@drawable/shapevideo"/>



</RelativeLayout>