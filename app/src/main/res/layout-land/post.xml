<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portaitbg">

    <include

        layout="@layout/toolbarfrag"
        android:id="@+id/inclpost"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inclpost"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/imageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content" />


</LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/details">


        <Button
            android:id="@+id/share"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/shapevideo"
            android:text="Partager" />

        <Button
            android:id="@+id/download"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/shapevideo"
            android:text="Telecharger"/>





    </LinearLayout>

    </RelativeLayout>


</RelativeLayout>